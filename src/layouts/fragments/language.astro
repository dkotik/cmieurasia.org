---
const locale = Astro.props.locale || "ua";
const path = Astro.url.pathname;

const URL = (locale) => {
    const m = path.match(/^\/(ua|ru|en)\/(\w+)$/);

    if (m && [
        "programs",
        "seminars",
        "enroll",
        "donate",
        "contact",
    ].includes(m[2])) return `/${locale}/${m[2]}.html`;
    if (locale === "en") return "/en/index.html";
    if (locale === "ru") return "/ru/index.html";
    return "/index.html";
}
